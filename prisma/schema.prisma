generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  phone         String?
  role          Role      @default(WORKER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts   Account[]
  sessions   Session[]
  Contractor Contractor?
  dockets Docket[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ---------
// Enums
// ---------
enum Role {
  ADMIN
  SUPERVISOR
  WORKER
}

/// =====================
/// Milestone 1: Masters
/// =====================

model Builder {
  id          String  @id @default(cuid())
  name        String
  /// Excel: "Company code" (must be unique)
  companyCode String  @unique
  abn         String? @db.VarChar(20)
  phone       String? @db.VarChar(30)
  address     String?
  website     String?

  /// Excel: default rates (optional, can be overridden per worker/week)
  supervisorRate Decimal? @db.Decimal(10, 2)
  tieHandRate    Decimal? @db.Decimal(10, 2)
  tonnageRate    Decimal? @db.Decimal(10, 2)

  /// Excel: "Person" & "email" (optional)
  contactPerson String?
  contactEmail  String?

  locations BuilderLocation[]
  dockets Docket[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@index([companyCode])
}

model BuilderLocation {
  id String @id @default(cuid())

  builderId String
  builder   Builder @relation(fields: [builderId], references: [id], onDelete: Cascade)

  /// Human label, e.g. "317 Stafford Road" or site nickname
  label   String
  address String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  dockets Docket[]

  /// Prevent duplicate labels within the same builder
  @@unique([builderId, label])
  @@index([builderId])
}

model Contractor {
  id String @id @default(cuid())

  /// Link to your existing User (optional until portal access is given)
  userId String? @unique
  user   User?   @relation(fields: [userId], references: [id])

  /// From ABNContractors sheet
  email     String? @unique
  nickname  String  @unique
  firstName String?
  lastName  String?
  fullName  String?

  hourlyRate Decimal @db.Decimal(10, 2)

  /// Business & payment (encrypted fields use larger storage)
  abn         String? @db.VarChar(20)
  bankName    String? @db.Text // Encrypted data needs more space
  bsb         String? @db.Text // Encrypted data needs more space
  accountNo   String? @db.Text // Encrypted data needs more space
  phone       String? @db.VarChar(30)
  homeAddress String?

  /// Profile
  position   String? // e.g., "Steel fixer", "Welder"
  experience String? // free-form, e.g., "2 years"

  /// Excel "on off" -> active
  active Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  docketEntry DocketEntry[]
  WorkerInvoice WorkerInvoice[]

  @@index([nickname])
  @@index([active])
}



/// =====================
/// Milestone 2 â€” Daily Dockets
/// =====================

enum MediaType {
  PHOTO
  VIDEO
}

model Docket {
  id          String   @id @default(cuid())
  date        DateTime
  builderId   String
  builder     Builder  @relation(fields: [builderId], references: [id], onDelete: Restrict)
  locationId  String
  location    BuilderLocation @relation(fields: [locationId], references: [id], onDelete: Restrict)

  scheduleNo  String?
  description String?

  supervisorId String
  supervisor   User     @relation(fields: [supervisorId], references: [id], onDelete: Restrict)

  siteManagerName        String?
  siteManagerSignatureUrl String? // store data URL or uploaded file URL

  media       DocketMedia[]
  entries     DocketEntry[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([date])
  @@index([builderId, locationId, date])
}

model DocketEntry {
  id            String      @id @default(cuid())
  docketId      String
  docket        Docket      @relation(fields: [docketId], references: [id], onDelete: Cascade)
  contractorId  String
  contractor    Contractor  @relation(fields: [contractorId], references: [id], onDelete: Restrict)

  // allow both types same day
  tonnageHours   Decimal    @default(0) @db.Decimal(6,2)
  dayLabourHours Decimal    @default(0) @db.Decimal(6,2)

  createdAt     DateTime    @default(now())

  @@index([docketId])
  @@index([contractorId])
}

model DocketMedia {
  id        String   @id @default(cuid())
  docketId  String
  docket    Docket   @relation(fields: [docketId], references: [id], onDelete: Cascade)
  type      MediaType
  url       String
  caption   String?
  createdAt DateTime @default(now())
}




// --- Milestone 3: Worker Invoices (minimal required) ---

enum WorkerInvoiceStatus {
  DRAFT
  SUBMITTED
  PAID
}

model WorkerInvoice {
  id           String   @id @default(cuid())

  // who this invoice belongs to
  contractorId String
  contractor   Contractor @relation(fields: [contractorId], references: [id], onDelete: Restrict)

  // week window (ISO Monday start; Sunday end)
  weekStart    DateTime
  weekEnd      DateTime

  // SNAPSHOTS taken at submit time (immutable unless admin edits in Weekly Payments)
  totalHours   Decimal   @db.Decimal(10, 2)
  hourlyRate   Decimal   @db.Decimal(10, 2)
  totalAmount  Decimal   @db.Decimal(12, 2)

  // lifecycle
  status       WorkerInvoiceStatus @default(DRAFT)
  submittedAt  DateTime?
  paidAt       DateTime?
  pdfUrl       String?   // stored file/link to the generated invoice PDF
  auditNotes   String?   @db.Text // admin notes for changes

  // housekeeping
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // one invoice per worker per week
  @@unique([contractorId, weekStart])
  @@index([weekStart, weekEnd])
}
